@article{castello_deep_2019,
	title = {Deep learning in the built environment: automatic detection of rooftop solar panels using {Convolutional} {Neural} {Networks}},
	volume = {1343},
	issn = {1742-6596},
	shorttitle = {Deep learning in the built environment},
