@article{biljecki_raise_2019,
	title = {{RAISE} {THE} {ROOF}: {TOWARDS} {GENERATING} {LOD2} {MODELS} {WITHOUT} {AERIAL} {SURVEYS} {USING} {MACHINE} {LEARNING}},
