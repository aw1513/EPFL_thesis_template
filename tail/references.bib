	author = {Ramirez Camargo, Luis and Gruber, Katharina and Nitsch, Felix},
	month = sep,
	year = {2018},
	keywords = {COSMO-REA, Regional reanalysis, Renewable energy, Solar radiation, Wind speed},
}

